{
   "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "outDir": "out",
      "lib": ["ES2020", "DOM"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "declaration": false,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"]
      }
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", ".vscode-test"]
}
