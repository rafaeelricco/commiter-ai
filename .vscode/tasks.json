{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "label": "npm: build",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "npm", 
            "script": "watch",
            "label": "npm: watch",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "isBackground": true,
            "problemMatcher": ["$tsc-watch"],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "type": "npm",
            "script": "lint",
            "label": "npm: lint", 
            "group": "test",
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "type": "npm",
            "script": "test",
            "label": "npm: test",
            "group": "test",
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            }
        }
    ]
